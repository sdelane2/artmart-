<div class="form-container">
  <h3>Login</h3>
  <div class="form-text">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email %>

      <%= f.label :password %>
      <%= f.password_field :password %>

      <%= f.submit "Log in" %>
    <% end %>
    </div>


    <p class="form-text">New user? <%= link_to "Sign up now!", new_user_path %></p>
  
</div>