

<%= form_for([@artwork, review]) do |f| %>
  <%= f.label "Recommend this artwork" %>

  Yes : <%= f.radio_button :recommend, true %> 
  No : <%= f.radio_button :recommend, false %>
  <p>Please write your review below:<br>
  <%= f.text_area :text, :cols => 100, :rows => 10 %></p>
  <%= f.submit "Post Review" %> 
<% end %>

