<!DOCTYPE html>
<html>
  <head>
    <title>ArtMart - Unfold The Beauty</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>

       <div class='container'>
       <p align="center">
        <ul class= "nav">
          <li><%= link_to "explore art ", artworks_path %></li> |


          <% if @current_user %>
            <li><%= link_to "book viewing", new_appointment_path %></li> |
            <li><%= link_to "my profile", user_path(@current_user) %></li> |
            <li><%= link_to "my favorites", new_user_path %></li> |
            <li class="right">| <%= link_to "log out", logout_path, method: :delete %> |</li>
            <li class="right">welcome, <%= @current_user.first_name %></li> 
          <% else %>
            <li class="right"><%= link_to "login", new_login_path %></li>
            <li class="right"><%= link_to "sign up", new_user_path %></li>
          <% end %>
        </ul>

        <p class="logo">
        <%= image_tag "logo/artmart_banner.gif" %></p>
       </div>

    <%= yield %>
    
  </body>
</html>

