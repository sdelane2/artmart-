<% if flash[:user_errors] %>
  <% flash[:usre_errors].each do |error| %>
    <p style="color:red;"><%= error %></p>
  <% end %>
<% end  %>

<%= form_for @user do |f| %>
    <%= f.label :first_name %>
    <%= f.text_field :first_name, class:"form" %>
    <br>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
    <br>
    <%= f.label :email %>
    <%= f.email_field :email %>
    <br>
    <%= f.label :password %>
    <%= f.password_field :password %>
    <br>
    <br>
    <%= f.submit %>
<% end %>

