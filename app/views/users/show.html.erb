<div class="show-container">
    <div class="show-name">
        <h1><%= @user.first_name %> <%= @user.last_name %> </h1>
    </div>
    <strong>Status:</strong> <%= @user.status %><br>
    <strong>E-mail:</strong> <%= @user.email %>
    <p>
    <strong>Art Viewing Appointments (<%= @appointments.count %>) <br></strong>
    <div class="show-appointment">
        <% @current_user.appointments.each do |appt|%>
            <%= link_to appointment_path(appt) do %>
                <%=appt.artwork.title %>(<%= appt.date %> 
            <% end%>
        <% end %> 
    </div>
    </p>

    <p>
        <div class="show-btns">
            <%= button_to "Update Profile", edit_user_path, method: :get, class: "submit-btn-lrg" %>
        </div>
        <div class="show-btns">
            <%= button_to "Delete Profile", destroy_user_path, method: :delete, class: "submit-btn-lrg" %>
        </div>
        <div class="index-btns">
            <%= button_to "My Favorites" , favorite_artworks_path(@current_user), method: :get, class: "submit-btn-lrg" %>
        </div>
    </p>


</div>